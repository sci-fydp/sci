# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Search.index()

GET     /search                     controllers.Search.search(s:String)

POST    /user                     	controllers.User.register()
POST    /user                     	controllers.User.login()
POST    /user                     	controllers.User.saveItem()

# Test for MySQL
GET     /testall                    controllers.Test.testAll()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
